@model IEnumerable<Prueba.Models.Inquilino>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";

}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <a class="btn btn-light mb-3" asp-controller="Propiedades"
           asp-action="CreateInquilino">
            Registrar
        </a>
    </div>

    <!-- Content Row -->
    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- DataTales Example -->
            <div class="card shadow mb-4 bg-content-bg">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Inquilinos
                    </h6>

                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table text-center"
                               id="dataTable"
                               width="100%"
                               cellspacing="0">
                            <thead>
                                <tr>
                                    <th>
                                        Email
                                    </th>
                                    <th>
                                        Propiedad
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Rif)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Telefono)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Activo)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IdUsuarioNavigation.FirstName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IdPropiedadNavigation.Codigo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Rif)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Telefono)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Activo)
                                        </td>

                                        <td>
                                            <a asp-controller="Inquilinos" asp-action="Edit" asp-route-id="@item.IdInquilino">Editar</a> |
                                            <a asp-controller="Inquilinos" asp-action="Delete" asp-route-id="@item.IdInquilino">Eliminar</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


