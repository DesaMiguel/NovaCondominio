                    </div>

                    <div class="col-md-4 d-none d-md-block">
                        <a asp-controller="Home" asp-action="Construccion">
                            <div class="payment-card payoneer">
                                <!-- Logo de PayPal -->
                                <div class="logo">
                                    <img src="~/images/Payoneer-Emblem.png"
                                         alt="Payoneer" />
                                </div>
                            </div>
                        </a>
                    </div>

                    <div class="col-md-4 d-none d-md-block">
                        <a asp-controller="Home" asp-action="Construccion">
                            <div class="credit-card">
                                <!-- Chip -->
                                <div class="chip">
                                    <img src="~/images/flat-color-icons_sim-card-chip.png"
                                         alt="Chip" />
                                </div>
                                <!-- Contactless -->
                                <div class="contactless">
                                    <img src="~/images/mdi_contactless-payment.png"
                                         alt="Contactless" />
                                </div>
                                <!-- Número de la tarjeta -->
                                <div class="card-number">**** **** **** 1234</div>
                                <!-- Nombre del titular -->
                                <div class="card-holder">John Doe</div>
                                <!-- Fecha de expiración -->
                                <div class="expiry-date">12/25</div>
                                <!-- Logo de Mastercard -->
                                <div class="mastercard-logo">
                                    <img src="~/images/grommet-icons_mastercard.png"
                                         alt="Mastercard" />
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <button class="prev" data-bs-target="#carouselExample"
                data-bs-slide="prev">
            &#10094;
        </button>
        <button class="next" data-bs-target="#carouselExample"
                data-bs-slide="next">
            &#10095;
        </button>
    </div>
</div>


