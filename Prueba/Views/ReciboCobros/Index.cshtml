@model IEnumerable<Prueba.Models.ReciboCobro>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <a class="btn btn-light mb-3" asp-controller="ReciboCobros"
           asp-action="Create">
            Registrar
        </a>
        <a class="btn btn-light mb-3"
           asp-action="Index" asp-controller="ReciboCobros">
            Volver
        </a>
    </div>

    <!-- Content Row -->
    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- DataTales Example -->
            <div class="card shadow mb-4 bg-content-bg">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Recibos
                    </h6>

                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table text-center"
                               id="dataTable"
                               width="100%"
                               cellspacing="0">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Monto)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Fecha)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Pagado)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EnProceso)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Abonado)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MontoRef)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ValorDolar)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.SimboloMoneda)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.SimboloRef)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MontoMora)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MontoIndexacion)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Acumulado)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Mes)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ReciboActual)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TotalPagar)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Diferencial)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MontoRefTotalPagar)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.AbonadoRef)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IdPropiedadNavigation)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IdRgastosNavigation)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Any())
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Monto)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Fecha)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Pagado)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.EnProceso)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Abonado)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.MontoRef)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ValorDolar)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SimboloMoneda)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SimboloRef)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.MontoMora)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.MontoIndexacion)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Acumulado)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Mes)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ReciboActual)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TotalPagar)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Diferencial)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.MontoRefTotalPagar)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AbonadoRef)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IdPropiedadNavigation.Codigo)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IdRgastosNavigation.Mes)
                                            </td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@item.IdReciboCobro">Editar</a> |
                                                <a asp-action="Details" asp-route-id="@item.IdReciboCobro">Detalles</a> |
                                                <a asp-action="Delete" asp-route-id="@item.IdReciboCobro">Eliminar</a>
                                            </td>
                                        </tr>
                                    }

                                }
                                else
                                {
                                    <tr>
                                        <td colspan="20">No hay datos disponibles.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>