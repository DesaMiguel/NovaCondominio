                            @*                            <tfoot>
                            <tr>
                            <th>Fecha</th>
                            <th>Monto</th>
                            <th>Forma de pago</th>
                            <th>Referencia</th>
                            <th>Banco</th>
                            <th>Acciones</th>
                            </tr>
                            </tfoot>*@
                            <tbody>
                                @if (Model.PagosEmitidos != null && Model.PagosEmitidos.Count() > 0)
                                {
