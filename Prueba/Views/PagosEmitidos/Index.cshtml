                                                        <td>@item.Fecha.ToString("dd/MM/yyyy")</td>
                                                        <td>@(item.Monto.ToString("N")) @item.SimboloMoneda </td>
                                                        <td>@item.ValorDolar.ToString("N")</td>
                                                        <td>@(item.MontoRef.ToString("N")) @item.SimboloRef </td>
                                                        <td>@FormaPago.Transferencia</td>
                                                        <td>@referencia.NumReferencia</td>
                                                        <td>@banco.Descricion</td>
                                                        @if (item.Activo)
                                                        {
                                                            <td>
                                                                @*<a asp-action="Edit" asp-route-id="@item.IdPagoEmitido">Editar</a> |*@
                                                                <a asp-action="Details" asp-route-id="@item.IdPagoEmitido">Detalles</a> |
                                                                <a asp-action="PagoProveedorPDF" asp-route-id="@item.IdPagoEmitido">PDF</a> |
                                                                <a asp-action="Delete" asp-route-id="@item.IdPagoEmitido">Eliminar</a>
                                                            </td>
                                                        }
                                                        else
                                                        {
                                                            <td>
                                                                Conciliado |
                                                                <a asp-action="PagoProveedorPDF" asp-route-id="@item.IdPagoEmitido">PDF</a> |

                                                            </td>
                                                        }

                                                    </tr>
                                                }                                             

                                            }

                                        }
                                        else
                                        {
                                            <tr class="tr_s">
                                                <td>@item.Fecha.ToString("dd/MM/yyyy")</td>
                                                <td>@(item.Monto.ToString("N")) @item.SimboloMoneda </td>
                                                <td>@item.ValorDolar.ToString("N")</td>
                                                <td>@(item.MontoRef.ToString("N")) @item.SimboloRef </td>
                                                <td>@FormaPago.Efectivo</td>
                                                <td></td>
                                                <td></td>
                                                @if (item.Activo)
                                                {
                                                    <td>
                                                        @*<a asp-action="Edit" asp-route-id="@item.IdPagoEmitido">Editar</a> |*@
                                                        <a asp-action="Details" asp-route-id="@item.IdPagoEmitido">Detalles</a> |
                                                        <a asp-action="PagoProveedorPDF" asp-route-id="@item.IdPagoEmitido">PDF</a> |
                                                        <a asp-action="Delete" asp-route-id="@item.IdPagoEmitido">Eliminar</a>
                                                    </td>
                                                }
                                                else
                                                {
                                                    <td>
                                                        Conciliado |
                                                        <a asp-action="PagoProveedorPDF" asp-route-id="@item.IdPagoEmitido">PDF</a> |
                                                    </td>
                                                }

                                            </tr>
                                        }

                                    }
                                }
                                else
                                {
                                    <tr class="tr_s">
                                        <td>No</td>
                                        <td>Existen</td>
                                        <td>Datos</td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

