@model ICollection<Cliente>

@{
    ViewData["Title"] = "Facturas Pendientes";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- DataTales Example -->
            <div class="card shadow mb-4 bg-content-bg">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Clientes
                    </h6>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <a class="btn btn-light mb-3" asp-controller="Clientes"
                               asp-action="DetalleFacturasPendientes" asp-route-id="@item.IdCliente" >
                                @item.Nombre
                            </a>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>